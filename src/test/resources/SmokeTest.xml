<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="SmokeTest" parallel="methods" thread-count="2">
    <parameter name="BaseURL" value="https://qa.koel.app/"/>
    <test name="Smoke" preserve-order="false">
        <classes>
            <class name="LoginTests">
                <methods>
                    <exclude name="loginInvalidCredentials"/>
                </methods>
            </class>
            <class name="PlaylistTests"/>
            <class name="PlaybackTests"/>
        </classes>
    </test>
</suite>