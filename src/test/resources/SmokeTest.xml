<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="SmokeTest" parallel="methods" thread-count="1">
    <parameter name="BaseURL" value="https://qa.koel.app/"/>
    <test name="SmokeTest" preserve-order="false">
        <classes>
            <class name="PlaylistTests">
                <methods>
                    <include name="deleteActivePlaylist"/>
                </methods>
            </class>
            <class name="LoginTests">
                <methods>
                    <exclude name="loginInvalidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>